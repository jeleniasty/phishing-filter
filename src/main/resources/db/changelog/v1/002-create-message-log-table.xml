<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.10.xsd">

    <changeSet id="2" author="jeleniasty">
        <sql>
            CREATE TABLE message_log
            (
                message_id UUID        NOT NULL,
                sender     VARCHAR(50),
                recipient  VARCHAR(50),
                message    TEXT,
                created_at TIMESTAMP   NOT NULL DEFAULT NOW(),
                PRIMARY KEY (message_id, created_at)
            ) PARTITION BY RANGE (created_at);
        </sql>
    </changeSet>


    <changeSet id="3" author="jeleniasty">
        <sql>
            CREATE TABLE message_log_2025_11_20 PARTITION OF message_log
                FOR VALUES FROM ('2025-11-20') TO ('2025-11-21');
        </sql>
    </changeSet>

    <changeSet id="4" author="jeleniasty">
        <createTable tableName="message_status">
            <column name="message_id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
